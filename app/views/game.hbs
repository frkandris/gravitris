<div class="container">
    <div class="row">
        <div class="col-sm">
            <div id="game-container">

                <div>
                    <canvas id="nextBlocksAreaCanvas" width="280" height="40"></canvas>
                </div>
                <div>
                    <canvas id="playAreaCanvas" width="200" height="600" style="border:1px solid #cccccc;"></canvas>
                </div>

                <span style="display:none"><canvas id="currentGravityCalculationAreaCanvas" width="320" height="600" style="border:1px solid #cccccc;"></canvas></span>

            </div>
        </div>
        <div class="col-sm">
            <div>
                <p id="chat-area" style="position: absolute;bottom: 30px;">
                </p>
            </div>
        </div>
    </div>
</div>

{{#if gameBlocks}}
    <script>
        var preloadedGameBlocks = [{{#each gameBlocks}}{{this}}, {{/each}}];
    </script>
{{/if}}
{{#if gameString}}
    <script>
        var preloadedGameString = [];
        {{#each gameString}}
        preloadedGameString.push({
            frameNumber: {{this.frameNumber}},
            eventName: '{{this.eventName}}',
            eventValue: '{{this.eventValue}}'
        });
        {{/each}}
    </script>
{{/if}}

<script src='/javascripts/bundle.js'></script>